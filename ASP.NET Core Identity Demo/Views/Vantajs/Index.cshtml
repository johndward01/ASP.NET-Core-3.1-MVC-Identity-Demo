<!-- vanta.js wrapper -->
<h1>Vanta.JS NET </h1>

<div id="vantajs" style="height: 100vh;"></div>

@section Scripts
{
<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>
<script>
    VANTA.NET({
      el: "#vantajs",
      mouseControls: false, // turned mouse controlls off so it becomes a cool background
      touchControls: false, // turned touch controlls off just in case
      gyroControls: false,
      minHeight: 200.00,
      minWidth: 200.00,
      scale: 1.00,
      scaleMobile: 1.00,
      color: 0x28bec8,
      backgroundColor: 0x0
    })
</script>
}