@model Login

<style>
    @@import url("https://fonts.googleapis.com/css2?family=Roboto&display=swap");

    .glow-on-hover {
        width: 220px;
        height: 50px;
        border: none;
        outline: none;
        color: #fff;
        background: #111;
        cursor: pointer;
        position: relative;
        z-index: 0;
        border-radius: 10px;
    }

        .glow-on-hover:before {
            content: '';
            background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
            position: absolute;
            top: -2px;
            left: -2px;
            background-size: 400%;
            z-index: -1;
            filter: blur(5px);
            width: calc(100% + 4px);
            height: calc(100% + 4px);
            animation: glowing 20s linear infinite;
            opacity: 0;
            transition: opacity .3s ease-in-out;
            border-radius: 10px;
        }

        .glow-on-hover:active {
            color: #000
        }

            .glow-on-hover:active:after {
                background: transparent;
            }

        .glow-on-hover:hover:before {
            opacity: 1;
        }

        .glow-on-hover:after {
            z-index: -1;
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: #111;
            left: 0;
            top: 0;
            border-radius: 10px;
        }

    @@keyframes glowing {
        0% {
            background-position: 0 0;
        }

        50% {
            background-position: 400% 0;
        }

        100% {
            background-position: 0 0;
        }
    }
</style>

<div class="container fullscreen-display mucho-margin-top">
    <div class="row">
        <div class="col-6">
            <div class="text-white-50 login border border-light p-3">
                <h1 class="display-4 text-center">Login</h1>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <button class="glow-on-hover" type="submit">Login</button>
                </form>
            </div>
        </div>
        <div class="col-6">
            <div class="text-white-50 login border border-light p-3">
                <h1 class="display-4 text-center">Register</h1>
                <p>Create an account here!</p>
                <p>For development purposes, access to the Admin/Create page is unrestricted.</p>
                <p>
                    Add the <span style="color: aquamarine;">[Authorize]</span>
                    attribute to the Action method in the controller, in order to close off for Non-Authenticated users!
                </p>
                <hr />
                <a class="btn btn-outline-success mx-2" href="~/Admin/Create">Register</a>
            </div>
        </div>
    </div>
</div>


