@using ASP.NET_Core_Identity_Demo.Models;
@model AppUser

<div class="mucho-margin-top">
    <div>
        <br />
        <br />
    </div>
    <div class="container">
    <div class="row">
        <div class="col">
            <a style="text-decoration: none;" asp-controller="Admin" asp-action="Index">
                <div class="card text-blue bg-dark">
                    <h1 class="card-title text-white text-center">Users</h1>
                    <img class="card-img-top" src="~/imgs/group-users.png" />
                    <div class="card-body">
                        <p class="card-text">
                            Allows you to see all of the users stored in the IdentityDB
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a style="text-decoration: none;" asp-controller="Claims" asp-action="Index">
                <div class="card text-blue bg-dark">
                    <h1 class="card-title text-white text-center">Claims</h1>
                    <img class="card-img-top" src="~/imgs/claims.png" />
                    <div class="card-body">
                        <p class="card-text">
                            Allows you to see all of the claims associated with a particular user
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a style="text-decoration: none;" asp-controller="Role" asp-action="Index">
                <div class="card text-blue bg-dark">
                    <h1 class="card-title text-white text-center">Roles</h1>
                    <img class="card-img-top" src="~/imgs/roles.png" />
                    <div class="card-body">
                        <p class="card-text">
                            Allows you to see all of the roles assigned to each user
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
</div>





